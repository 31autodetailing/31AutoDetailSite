---
import { Image } from 'astro:assets';
import logoBrandImg from '../../public/logo_brand.jpg';

const { company_name } = Astro.props;

import Facebook from '../icons/facebook.astro';
import Instagram from '../icons/instagram.astro';
import Youtube from '../icons/youtube.astro';
---

<footer>
  <h3>{company_name}</h3>
  <div class="footer-info">
    <p>684 S Main St, Raynham, MA 02767</p>
    <p>+1-508-837-9451</p>
    <p>31detail@gmail.com</p>
    <div class="links">
      <a href="https://www.facebook.com/people/31-Detailing/61550874906211/">
        <Facebook />
      </a>
      <!--
      <a href="">
        <Instagram />
      </a>
      <a href="">
        <Youtube />
      </a>
      -->
    </div>
  </div>
  <div class="img-cont">
    <Image class="logo-img" src={logoBrandImg} alt={`${company_name} logo`}/>
  </div>
</footer>

<style>
  footer {
    margin-top: auto;
    background-color: hsla(var(--link-color), 0.1);
    display: flex;
    justify-content: center;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 1rem;
    text-align: center;
  }
  footer p {
    margin: 0.3rem 0;
  }
  footer a {
    font-size: 2rem;
    text-decoration: none;
    cursor: pointer;
    color: hsla(var(--link-color), 1);
    margin: 0 0.6rem;
  }
  footer a:hover {
    color: hsla(var(--link-hover-color), 1);
  }
  footer .img-cont {
    width: 150px;
    height: auto;
    overflow: hidden;
    border-radius: 50%;
  }
  footer .logo-img {
    width: 100%;
    height: 100%;
  }
</style>
