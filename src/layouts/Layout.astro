---
declare global {
  interface Window {
    google?: {
      maps?: any;
    };
  }
}
const { title } = Astro.props;
const company_name = "31 Auto Detailing";

import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
    <meta
      name="viewport" 
      content="width=device-width, initial-scale=1.0,
               maximum-scale=1.0, user-scalable=0"
    >
		<link rel="icon" type="image/svg+xml" href="/31AutoDetailSite/logo_brand.jpg" />
		<meta name="generator" content={Astro.generator} />
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Mukta:wght@200;300;400;500;600;700;800&family=Sixtyfour+Convergence&family=Spline+Sans+Mono:ital,wght@0,300..700;1,300..700&family=Zeyada&display=swap');
    </style>
		<title>{title}</title>
	</head>
	<body>
    <Nav company_name={company_name}/>
		<slot />
    <Footer />

	</body>
</html>
<style is:global>
  /*  FONTS
  font-family: "Mukta", sans-serif;
  font-family: "Spline Sans Mono", monospace;
  font-family: "Sixtyfour Convergence", sans-serif;
  font-family: "Zeyada", cursive;
  */
  @font-face {
    font-family: "DaggerSquare";
    src: url('31AutoDetailSite/fonts/DAGGERSQUARE.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "DaggerSquareOblique";
    src: url('/31AutoDetailSite/fonts/DAGGERSQUARE_OBLIQUE.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

	:root {
    /* v1 */
    /* --bg-color: 224, 50%, 9%;              #0b1222 */
    /* --text-color: 224, 70%, 90%;           #a3b5f1 */
    /* --link-color: 224, 82%, 72%;           #7d9cf2 */
    /* --link-hover-color: 154, 81%, 69%;     #70f0b8 */
    /* --red-color: 21, 98%, 50%;             #fc5a03 */

    /* v2 */
    --bg-color: 0, 0%, 0%;                  /* #000000 */
    --text-color: 358, 83%, 84%;            /* #f8b4b7 */
    --link-color: 351, 79%, 40%;            /* #b7152e */
    --link-hover-color: 357, 76%, 75%;      /* #f08f94 */
    --form-success-color: 154, 81%, 69%;    /* #70f0b8 */
    --form-error-color: 21, 98%, 50%;       /* #fc5a03 */

    --nav-title-font: "DaggerSquareOblique";

    font-family: "Mukta", sans-serif;
	}
  body {
    background: hsla(var(--bg-color), 1);
    color: hsla(var(--text-color), 1);
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
